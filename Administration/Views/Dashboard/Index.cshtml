@section PageStyle
{
    <link href="~/assets/node_modules/morrisjs/morris.css" rel="stylesheet">
    <link href="~/assets/node_modules/vectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet" />
    <link href="~/dist/css/pages/easy-pie-chart.css" rel="stylesheet">
    <link href="~/dist/css/style.min.css" rel="stylesheet">
}
<div class="row">
    <div class="col-md-12">
        <input type="hidden" id="JsonCustomer" name="JsonCustomer" value='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.CustomerList))' />
        <input type="hidden" id="JsonSupplier" name="JsonSupplier" value='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.SupplierList))' />
        <div class="card-group">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-flex no-block align-items-center">
                                <div>
                                    <h3><i class="icon-screen-desktop"></i></h3>
                                    <p class="text-muted">Number of customers</p>
                                </div>
                                <div class="ml-auto">
                                    <h2 class="counter text-primary jsTotalCustomer"></h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="progress">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: 85%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-flex no-block align-items-center">
                                <div>
                                    <h3><i class="icon-note"></i></h3>
                                    <p class="text-muted">Number of suppliers</p>
                                </div>
                                <div class="ml-auto">
                                    <h2 class="counter text-cyan jsTotalSupplier">169</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="progress">
                                <div class="progress-bar bg-cyan" role="progressbar" style="width: 85%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-flex no-block align-items-center">
                                <div>
                                    <h3><i class="icon-doc"></i></h3>
                                    <p class="text-muted"></p>
                                </div>
                                <div class="ml-auto">
                                    <h2 class="counter text-purple"></h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="progress">
                                <div class="progress-bar bg-purple" role="progressbar" style="width: 85%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-flex no-block align-items-center">
                                <div>
                                    <h3><i class="icon-bag"></i></h3>
                                    <p class="text-muted"></p>
                                </div>
                                <div class="ml-auto">
                                    <h2 class="counter text-success"></h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 85%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <!-- Column -->
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">

                                        <h5 class="card-title">Customer Country</h5>
                                        <div id="visitfromworld" style="width:100%!important; height:415px"></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Column -->
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <!-- Column -->
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">

                                        <h5 class="card-title">Supplier Country</h5>
                                        <div id="visitfromworld2" style="width:100%!important; height:415px"></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Column -->
                </div>
            </div>
        </div>
    </div>
</div>

@section PageScript
{
    <script src="~/assets/node_modules/flot/jquery.flot.js"></script>
    <script src="~/assets/node_modules/flot.tooltip/js/jquery.flot.tooltip.min.js"></script>
    <script src="~/assets/node_modules/sparkline/jquery.sparkline.min.js"></script>
    <script src="~/assets/node_modules/jquery.easy-pie-chart/dist/jquery.easypiechart.min.js"></script>
    <script src="~/assets/node_modules/jquery.easy-pie-chart/easy-pie-chart.init.js"></script>
    <script src="~/assets/node_modules/vectormap/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="~/assets/node_modules/vectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/dist/js/dashboard2.js?version=@DateTime.Now"></script>
}