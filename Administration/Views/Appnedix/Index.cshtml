{
    <link href="/assets/node_modules/kendoui/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="/assets/node_modules/kendoui/styles/kendo.flat.min.css" rel="stylesheet" />
    <link href="/assets/node_modules/kendoui/styles/kendo.flat.mobile.min.css" rel="stylesheet" />
    <link href="/dist/css/pages/file-upload.css" rel="stylesheet">


}
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Appendix</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Appendix</a></li>

            </ol>


        </div>
    </div>
</div>
<div class="card">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs profile-tab" role="tablist">
        <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#Appendix" role="tab" aria-selected="true">Appendix</a> </li>
        <li class="nav-item"> <a class="nav-link jsAppendixLog" data-toggle="tab" href="#AppendixLog" role="tab" aria-selected="false">Appendix Log</a> </li>

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane active" id="Appendix" role="tabpanel">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>File upload</label>
                            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                <div class="form-control" data-trigger="fileinput">
                                    <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                    <span class="fileinput-filename"></span>
                                </div>
                                <span class="input-group-append btn btn-default btn-file">
                                    <span class="fileinput-new">Select file</span>
                                    <span class="fileinput-exists">Change</span>
                                    <input type="file" name="..." id="file">
                                </span>
                                <a href="javascript:void(0)" class="input-group-append btn btn-default fileinput-exists jsbtnImportRemove" data-dismiss="fileinput">Remove</a>
                                <a href="javascript:void(0)" class="input-group-append btn btn-info fileinput-exists jsbtnImport">Import</a>

                            </div>
                        </div>
                    </div>
                </div>

                <div id="Grid"></div>
            </div>
        </div>
        <!--second tab-->
        <div class="tab-pane" id="AppendixLog" role="tabpanel">
            <div class="card-body">

                <div id="GridLog"></div>
            </div>
        </div>

    </div>
</div>





<div id="NewModel" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="NewForm" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Selling</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="recipient-name" class="control-label">Selling:</label>
                        <input type="text" class="form-control" name="Value" data-parsley-required="true" data-parsley-required-message="Please Enter Selling" />
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">Dispaly Order:</label>
                        <input type="text" class="form-control" name="DisplayOrder">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger waves-effect waves-light">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>



<div id="UpdateModel" class="modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="UpdateForm" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Update  Selling</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="recipient-name" class="control-label">Selling:</label>
                        <input type="text" class="form-control" id="Value" name="Value" data-parsley-required="true" data-parsley-required-message="Please Enter Selling" />
                        <input type="hidden" id="ID" name="ID" value="" />
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">Dispaly Order:</label>
                        <input type="text" class="form-control" id="DisplayOrder" name="DisplayOrder">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger waves-effect waves-light">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>


