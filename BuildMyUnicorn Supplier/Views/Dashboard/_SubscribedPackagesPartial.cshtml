
@model  IEnumerable<Business_Model.Model.SubscribedPackages>

<div class="row">

    <div class="table-responsive" style="width:100% ;height:480px;">
        <table class="table table-hover no-wrap">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th>Name</th>
                    <th>Startup Name</th>
                    <th>Email</th>
                    <th>Duration</th>
                    <th>Package</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Feedback</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int Counter = 0;

                }

                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        Counter = Counter + 1;
                <tr>
                    <td class="text-center">@Counter </td>
                    <td class="txt-oflo">@item.FirstName  @item.LastName </td>
                    <td class="txt-oflo">@item.StartupName</td>
                    <td class="txt-oflo">@item.Email</td>
                    <td>@item.Duration</td>
                    <td>
                        @item.PackageTitle
                    </td>
                    <td><span class="text-success">@item.PackageAmount</span></td>
                    <td class="txt-oflo">@item.OrderDateTime.ToString("dd MMM yyyy")</td>
                    <td class="txt-oflo"><a href="~/Dashboard/Feedback/@item.OrderID"> <i class="fas fa-address-book" style="cursor:pointer"></i></a></td>
                </tr>

                    }
                }
                else
                {
                    <tr> <td colspan="5" style="text-align:center"> <h5>No Package Purchased</h5></td> </tr>
                }
            </tbody>
        </table>
    </div>
</div>

