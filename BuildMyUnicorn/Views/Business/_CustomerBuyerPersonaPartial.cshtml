@using Business_Model.Model;
@using System.ComponentModel;
@using System.Configuration;
@model IEnumerable<Business_Model.Model.BuyerPersona>

@if (Model.Count()> 0)
{
<div class="col-md-12">
    <!-- Card -->
    <div class="card text-center">
      
        <div class="card-body" style="text-align:right">
           
            <a href="javascript:void(0)" class="btn btn-info" data-toggle="modal" data-target="#buyerPersonaModal">Add </a>
        </div>
      
    </div>
</div>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-6 col-xl-4">
            <div class="card card-body">
                <div class="row align-items-center">
                    <div class="col-md-4 col-lg-3 text-center">
                        <a href="~/Business/Edit?BuyerPersonaID=@item.BuyerPersonaID">  <img class="card-img-top img-responsive" src="@ConfigurationManager.AppSettings["ClientBaseUrl"]/assets/images/avtar/Avatar Users2_@(item.AvtarID).png" alt="Card image cap"></a>
                    </div>
                    <div class="col-md-8 col-lg-9">
                        <h3 class="box-title m-b-0">@item.Name</h3>


                        <address>
                            @item.JobTitle

                        </address>
                    </div>
                    <div class="col-md-10 text-right" style="font-size:19px">

                        <span style="color:#e83e8c; cursor:pointer" data-id="@item.BuyerPersonaID" class="jsDeletebuyerpersona"> <i class="fa fa-trash"></i></span>
                        <a href="~/Business/Edit?BuyerPersonaID=@item.BuyerPersonaID" title="Update buyer persona"><i class="icons-Pencil"></i></a>
                    </div>

                </div>
            </div>
        </div>
       


    }


</div>
}
else
{
    <div class="col-md-12">
        <!-- Card -->
        <div class="card text-center">
            <div class="card-header">

            </div>
            <div class="card-body">
                <h4 class="card-title">No Buyer Persona Found</h4>
                <p class="card-text">Your buyer Persona will be added here.</p>
                <a href="javascript:void(0)" class="btn btn-info" data-toggle="modal" data-target="#buyerPersonaModal">Add </a>
            </div>
            <div class="card-footer text-muted">

            </div>
        </div>
    </div>

}