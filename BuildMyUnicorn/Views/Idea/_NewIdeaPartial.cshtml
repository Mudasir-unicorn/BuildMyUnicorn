                                    <textarea class='form-control ideatextarea progress-required @( Model.IdeaBreakDown.FeedBackFrom != null ? "progress-percent" : "")' id="FeedBackFrom" name="FeedBackFrom" oninput="auto_grow_idea_textarea(this)" placeholder="@(LanguageList.Count() > 0  ?  LanguageList.Where(x => x.PropertyName == "FeedBackFrom").FirstOrDefault().PlaceHolderText : "")">@Model.IdeaBreakDown.FeedBackFrom</textarea>
