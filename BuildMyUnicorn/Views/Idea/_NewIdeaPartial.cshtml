    @model Business_Model.Model.Idea
@{

    var LanguageList = ViewBag.Language as IEnumerable<Business_Model.Model.LanguageModule>;
}

<div class="row" id="validation">
    <div class="col-12">
        <div class="card wizard-content">
            <div class="card-body">
                <div class="row " style="margin: 0 0px 2px;">
                    <div class="col-md-5 align-self-center">
                        <h4 class="card-title" id="1">Your Idea</h4>
                    </div>
                    <div class="col-md-7 align-self-center text-right">
                        <div class="d-flex justify-content-end align-items-center">
                            <i class="mdi mdi-arrow-left"></i>  @Html.ActionLink("Back to Overview", "Index", "ModuleCourse", new { ControllerName = "Idea", ActionName = "Index", ModuleID = (int)Business_Model.Model.Module.MyIdea, SectionID = (int)Business_Model.Model.ModuleSection.MyIdea_Ideaoutofhead }, new { @class = "jsBackToOverview" })
                        </div>
                    </div>
                </div>

                <form id="IdeaForm" method="post" class="validation-wizard wizard-circle">
                    <input type="hidden" id="jsIdea" value='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))' />
                    <input type="hidden" id="EntityState" name="EntityState" value="@Model.EntityState" />
                    <input type="hidden" id="ActionType" value="@ViewBag.ActionType" />
                    <input type="hidden" id="IsRedirect" value='@(Model.IdeaID == Guid.Empty ? "true" : "false")' />
                    <input type="hidden" id="IdeaID" name="IdeaID" value="@Model.IdeaID" />

                    <!-- Step 1 -->
                    <h6>The Idea</h6>
                    <section>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "IdeaExplain").FirstOrDefault().QuestionText : "" ) </label>
                                    <textarea class='form-control ideatextarea progress-required @( Model.IdeaExplain != null ? "progress-percent" : "")' id="IdeaExplain" name="IdeaExplain" oninput="auto_grow_idea_textarea(this)" placeholder="@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "IdeaExplain").FirstOrDefault().PlaceHolderText : "" )">@Model.IdeaExplain</textarea>
                                </div>
                            </div>

                        </div>
                    </section>
                    <!-- Step 2 -->
                    <h6>Lets break down the idea</h6>
