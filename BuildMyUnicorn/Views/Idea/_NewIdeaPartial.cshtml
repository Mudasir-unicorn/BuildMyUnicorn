                            </div>
                            <div class='col-md-12 CompanyName  @(string.IsNullOrEmpty(@Model.Company.CompanyName) ? "hide" :"")'>
                                <div class="form-group">
                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "CompanyName").FirstOrDefault().QuestionText : "" )  </label>
                                    <input type="text" class='form-control  progress-required' id="CompanyName" name="CompanyName" value="@Model.Company.CompanyName" placeholder="@(LanguageList.Count() > 0  ?  LanguageList.Where(x => x.PropertyName == "CompanyName").FirstOrDefault().PlaceHolderText :"" )" />

