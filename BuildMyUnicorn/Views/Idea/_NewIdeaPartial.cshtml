                                    <input type="text" class='form-control' id="DomainName" name="DomainName" value="@Model.Company.DomainName" placeholder="@( LanguageList.Count() > 0  ? LanguageList.Where(x => x.PropertyName == "DomainName").FirstOrDefault().PlaceHolderText :"" )">
                                 
                                </div>
                            </div>
                            <div class="col-md-12">
