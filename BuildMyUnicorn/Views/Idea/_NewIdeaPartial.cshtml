                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "HaveGotDomain").FirstOrDefault().QuestionText : "")  </label>
                   
                                   @Html.DropDownList("HaveGotDomain", new SelectList(ViewBag.CompanySetupList, "ID", "Value", @Model.Company.HaveGotDomain), "- Please select -", new { @class = "custom-select col-12 jsOptionChange", @data_optionchange = "DomainName" })


