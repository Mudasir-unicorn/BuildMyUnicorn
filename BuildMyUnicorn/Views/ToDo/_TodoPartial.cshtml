@using Business_Model.Helper;
@model IEnumerable<Business_Model.Model.ToDoTask>


@{
    string GetShortFormat(DateTime? date)
    {
        if (date == null)
            return string.Empty;

        return date.GetValueOrDefault().ToString("dd-MM-yyyy");
    }
}
<table id="demo-foo-row-toggler" class="table table-bordered" data-toggle-column="first">
    <thead>
        <tr>
            <th data-breakpoints="xs">Subject</th>
            <th>Description</th>
            <th>Assigned To</th>
            <th>Start Date</th>
            <th data-breakpoints="xs sm">End Date</th>
            <th data-breakpoints="all">Assigned on</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr data-expanded="true">
                <td>
                    @item.Subject
                </td>
                <td>
                    @item.Description
                </td>
                <td>@(string.Join(", ", item.AssignedMappings?.Select(x=>x.AssignedTo).ToList()))</td>
                <td>@GetShortFormat(item.StartDate)</td>
                <td>@GetShortFormat(item.EndDate)</td>
                <td>@GetShortFormat(item.AssignedOn)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ToDoTaskID }, new { @class = "btn btn-primary" })|
                    <button class="delete btn btn-danger" data-id="@item.ToDoTaskID">Delete</button>
                </td>
            </tr>
        }


    </tbody>
</table>
