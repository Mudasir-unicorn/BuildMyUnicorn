
<div id="dialogClientUpdate" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title" id="myModalLabel">Please Complete Profile</h4>
            </div>
            <form class="form-horizontal form-material" id="frm_UpdateProfile">
                <input type="hidden" name="RoleInCompany" id="RoleInCompany" />
                <input type="hidden" name="StartupName" value="@ViewBag.Client.StartupName" />
                <input type="hidden" name="FirstName" value="@ViewBag.Client.FirstName" />
                <input type="hidden" name="LastName" value="@ViewBag.Client.LastName" />
                <input type="hidden" name="Email" value="@ViewBag.Client.Email" />
                <input type="hidden" name="Phone" value="@ViewBag.Client.Phone" />
                <input type="hidden" id="ImageID" name="ImageID" />
                <input type="hidden" id="ClientID" name="ClientID" value="@ViewBag.Client.ClientID" />
                <div class="modal-body">


                    <div class="row">


                        <div class="col-md-8">
                            <div class="form-group">
                                <label>Role at company</label>
                                <div class="row">
                                    <div class="col-md-6">

                                        @foreach (var item in ViewBag.Role)
                                        {
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="@item.ID" name="_RoleInCompany" value="@item.ID">
                                                <label class="custom-control-label" for="@item.ID">@item.Value</label>
                                            </div>
                                        }

                                    </div>







                                </div>
                            </div>
                         
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="wint1">Photograph</label>

                                <div class="fileupload">

                                    <div class="btn btn-default btn-file" style="position: relative; text-align:right">
                                        <input type="button" class="btn btn-primary pull-right" style="display:inline !important" value="Choose File" />
                                        <input type="file" id="ImageUpload" style="position: absolute;top: 0;right: 0;width: 100%;height: 100%;margin: 0;opacity: 0;">

                                    </div>

                                    <div class="dropzone" id="imagepreview" style="padding:5px;">
                                        <div id="my_img" class="dz-preview dz-file-preview dz-error" style="position:relative;text-align:center"><img id="profileImage" src="../Content/file_upload/profile-dummy.png" class="img-responsive img-thumbnail" /></div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="wint1">Linked in Profile</label>
                            <input type="text" class="form-control" id="LinkedProfile" name="LinkedProfile" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="wint1">Short Bio</label>
                            <textarea class="form-control ideatextarea progress-required progress-percent" id="ShortBio" name="ShortBio" oninput="auto_grow_idea_textarea(this)" aria-invalid="false"> </textarea>
                        </div>
                    </div>




                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default waves-effect"
                            data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary waves-effect">
                        Save
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>
