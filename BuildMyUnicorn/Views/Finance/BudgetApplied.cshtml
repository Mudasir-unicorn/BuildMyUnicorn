@section PageScript
{
    <script>
        $(document).on("click", ".jsDownloadForm", function (e) {
            window.location.replace(GetBaseURL() + "BusinessPlanFile");

        });

        $(document).on("click", ".jsDownloadBudget", function (e) {
           
            e.preventDefault();
            $.ajax({
                url: GetBaseURL() + "Finance/GeneratePersonlSurviveBudgetExcel",
                method: "POST",
                data: { id: $("#GrantID").val() } ,
                success: function (response) {
                    window.location.replace(GetBaseURL() + "Content/" + response);
                   
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $(".erorLabel").removeClass("invisible");
                    $(".errorMessage").text("Status: " + textStatus + "Error: " + errorThrown);
                }
            });

        });
    </script>



}